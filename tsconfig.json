{
  "compilerOptions": {
    "outDir": "lib/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "target": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "files": ["./src/index.ts"]
}
